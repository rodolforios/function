{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "dependencies": {
    "ajv": "^6.6.2",
    "axios": "^0.27.1",
    "express-bearer-token": "^2.2.0",
    "firebase": "^9.6.11",
    "firebase-admin": "^10.1.0",
    "firebase-functions": "^3.11.0",
    "firebase-tools": "^10.7.1",
    "is-empty": "^1.2.0",
    "jsonwebtoken": "8.0.1",
    "keypair": "^1.0.1",
    "lodash": "^4.17.21",
    "moment": "^2.22.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "chokidar-cli": "^2.1.0",
    "expect.js": "^0.3.1",
    "mocha": "^7.1.0",
    "nyc": "^15.1.0",
    "sinon": "^4.5.0"
  },
  "private": true,
  "scripts": {
    "serve": "firebase serve --only functions",
    "test": "./node_modules/.bin/nyc mocha src/**/test/*.js",
    "watch-dev": "nodemon --exec 'touch ./index.js'",
    "watch-test": "npm test; chokidar src/**/*.js src/**/test/*.js -i 'coverage' -c 'npm test' --silent"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 90,
    "include": [
      "**/*.js"
    ],
    "exclude": [
      "coverage",
      "node_modules",
      ".nyc_output",
      "**/test"
    ],
    "reporter": [
      "html"
    ]
  }
}
